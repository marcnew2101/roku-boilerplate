<?xml version="1.0" encoding="utf-8" ?>
<component name="LandingScreen" extends="Group">
	<script type="text/brightscript" uri="LandingScreen.brs" />
	<children>
    	<!-- solid color background -->
		<Rectangle
			id="Backdrop"
			translation="[0, 0]"
			color="0x0A0A0BFF"
			width="1920"
			height="1080"/>

        <!-- title at top of screen -->
        <Label
            id="landingTitle"
            translation="[0, 70]"
            width="1920"
            horizAlign="center"
            vertAlign="center"
            font="font:LargeBoldSystemFont"/>

        <!-- list options at middle of screen -->
        <LabelList
            id="landingLabelList"
            translation="[0, 0]"
            itemSize="[260, 70]"
            textHorizAlign="center"
            font="font:MediumSystemFont"
            focusedFont="font:MediumBoldSystemFont"
            vertFocusAnimationStyle="floatingFocus"/>
	</children>
</component>