<?xml version="1.0" encoding="utf-8" ?>
<component name="LandingScreen" extends="BaseScreen">
    <script type="text/brightscript" uri="LandingScreen.brs" />
    <children>
        <!-- title at top of screen -->
        <Label 
            id="landingTitle" 
            translation="[0, 70]" 
            width="1800"
            wrap="true"
            horizAlign="center" 
            vertAlign="center" 
            font="font:LargeBoldSystemFont"/>

        <!-- list options at middle of screen -->
        <LabelList 
            id="landingLabelList" 
            translation="[0, 0]" 
            itemSpacing="[0, 10]" 
            textHorizAlign="center" 
            font="font:MediumSystemFont" 
            focusedFont="font:MediumBoldSystemFont" 
            vertFocusAnimationStyle="floatingFocus"/>
    </children>
</component>